{% extends 'layouts/auth.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block content %}

    <h2>Rejestracja</h2>
    <form action="{{path_for('auth.register')}}" method="post">
        {{csrf_field() | raw}}
        <div class="form-group">
            <label for="name">Nazwa</label>
            <input type="text" id="name" name="name" placeholder="Jan Kowalski">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="jan@kowalski.pl">
        </div>
        <div class="form-group">
            <label for="password">Hasło</label>
            <input type="password" id="password" name="password" placeholder="******">
        </div>
        <input type="submit" name="" value="Kontynuuj">
    </form>
    <div class="social-providers">
        <p>Połącz z</p>
        <div class="row">
            <div class="col-6">
                <a href="{{path_for('auth.provider', {provider: 'google'})}}" class="btn btn-google" type="button" id="email" name="button">Google</a>
            </div>
            <div class="col-6">
                <a href="{{path_for('auth.provider', {provider: 'github'})}}" class="btn btn-github" type="button" id="password" name="button">Github</a>
            </div>
        </div>
    </div>
    <div class="create-box">
        <p>Posiadasz już konto?</p>
        <a href="{{path_for('auth.login')}}" class="btn btn-primary" name="button">Zaloguj się</a>
    </div>

{% endblock %}
